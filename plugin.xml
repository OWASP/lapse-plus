<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.6"?>
<plugin>

     <extension
         point="org.eclipse.ui.views">
      <category
            name="Lapse+ 2.8"
            id="lapsePlus">
         
      </category>
      <view
            allowMultiple="false"
            class="lapsePlus.views.LapseView"
            icon="icons/owasp2.jpg"
            category="lapsePlus"
            name="Provenance Tracker"
            id="lapsePlus.views.lapse">
      </view>
      <view
            allowMultiple="false"
            category="lapsePlus"
            class="lapsePlus.views.SourceView"
            icon="icons/owasp2.jpg"
            id="lapse.views.SQLSourceView"
            name="Vulnerability Sources"/>                        
      <view
            allowMultiple="false"
            category="lapsePlus"
            class="lapsePlus.views.SinkView"
            icon="icons/owasp2.jpg"
            id="lapsePlus.views.SinkView"
            name="Vulnerability Sinks"/>      
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="lapsePlus.views.lapse">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="lapsePlus.PerspectiveFactory"
            name="Static analysis"
            id="lapsePlus.perspective"/>
   </extension>   
</plugin>
